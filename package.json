{
  "name": "hit-counter",
  "version": "0.0.0",
  "description": "A web component and service for site hit visits",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start:client": "pnpx http-server -p 3000 -o",
    "start:server": "tsx src/service/api.ts",
    "start": "concurrently \"pnpm start:client\" \"pnpm start:server\"",
    "build": "tsc --project tsconfig.json",
    "dev": "tsc --watch src/index.ts",
    "lint": "tsc --noEmit --project tsconfig.json",
    "test": "pnpm exec playwright test",
    "clean": "rimraf ./dist ./node_modules",
    "rebuild": "rimraf ./dist && tsc --project tsconfig.json && cp -r dist/component public"
  },
  "keywords": [
    "web-component",
    "counter",
    "typescript",
    "90s"
  ],
  "author": "usrrname",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/express": "^5.0.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.2.0",
    "concurrently": "^9.2.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "googleapis": "^155.0.0",
    "hono": "^4.9.2",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "verdaccio": "^6.1.6",
    "vitest": "~3.2.0"
  }
}
