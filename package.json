  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/express": "^5.0.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.2.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "googleapis": "^155.0.0"
  }
}